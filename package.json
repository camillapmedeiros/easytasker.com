{
  "name": "easy.tasker",
  "version": "1.0.0",
  "private": "true",
  "devDependencies": {
    "bower": "^1.8.0",
    "browser-sync": "^2.12.8",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "css": "node-sass -r --output-style compressed src/css/style.sass -o dist",
    "css:watch": "npm run css && node-sass src/css/style.sass -wo dist",
    "build": "rm -rf dist && mkdir dist && cp -rf src/* dist && cp -rf bower_components dist && rm -rf dist/css/style.sass",
    "serve": "browser-sync start -s dist -f dist",
    "watch": "onchange src -- npm run build",
    "start": "run-p css:watch build watch serve"
  }
}
